<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sns.comment.dao.CommentDAO">
 	<select id="selectCommentList" parameterType="int" resultType="com.sns.comment.model.Comment">
 		SELECT 	
 			`id`
	 		, `postId`
	 		, `userId`
	 		, `content`
	 		, `createdAt`
	 		, `updatedAt`
 		FROM
 			`comment`
 		WHERE
 			`postId` = #{postId}
 	</select>
 	<insert id="insertCommentList" parameterType="map">
 	INSERT INTO `comment`
 	(
	 		 `postId`
	 		, `userId`
	 		, `content`
	 		, `createdAt`
	 		, `updatedAt`
 	)
 	VALUES
 	(
 		#{postId}
 		, #{userId}
 		, #{content}
 		,NOW()
 		,NOW()
 	)
 	</insert>
 	
 </mapper>